{
	"name": "@yunosukeyoshino/google-apps-script-starter",
	"version": "1.0.0",
	"description": "A starter template for Google Apps Script development with TypeScript, Vite, and Tailwind CSS.",
	"main": "index.js",
	"bin": {
		"create-gas-starter": "bin/cli.js"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"push": "bun run build && clasp push",
		"deploy": "bun run push && clasp deploy",
		"deployments": "clasp deployments",
		"open": "clasp open-web-app",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"files": [
		"bin/",
		"src/",
		".claspignore",
		"biome.json",
		"package.json",
		"README.md",
		"tsconfig.json",
		"vite.config.ts",
		".gitignore"
	],
	"keywords": [
		"google-apps-script",
		"clasp",
		"typescript",
		"vite",
		"tailwindcss",
		"starter"
	],
	"author": "YunosukeYoshino",
	"license": "MIT",
	"type": "commonjs",
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@google/clasp": "^3.1.3",
		"@tailwindcss/vite": "^4.1.18",
		"@types/google-apps-script": "^2.0.8",
		"husky": "^9.1.7",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-plugin-singlefile": "^2.3.0",
		"vite-plugin-static-copy": "^3.1.4"
	}
}
